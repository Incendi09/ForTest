@model IEnumerable<Lecture>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lecture List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Lecture" asp-action="Create" class="btn btn-success">
                Create New Lecture &nbsp; <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Lecture Name
                </th>
                <th>
                    Update Date
                </th>
                 <th>
                    Image Url
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.LectureName
                    </td>
                    <td width="50%">
                        @obj.UpdateDateTime
                    </td>
                    <td width="50%">
                        @obj.LectureImageUrl
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Lecture" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2">
                                <i class="bi bi-pencil-square"></i> &nbsp; Edit
                            </a>

                            <a asp-controller="Lecture" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> &nbsp; Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

